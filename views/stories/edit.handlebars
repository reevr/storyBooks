<h1>Add Story</h1>
<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" method="post" class="col s12">
    <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{ story.title }}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status">
                    <option value="public" {{ checkStatus story.status 'public'}}>Public</option>
                    <option value="private" {{ checkStatus story.status 'private'}}>Private</option>
                    <option value="unpublished" {{ checkStatus story.status 'unpublished'}}>Unpublished</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <p>
                <input type="checkbox" name="allowComments" class="filled-in checkbox" id="filled-in-box" {{ isChecked story.allowComments }}>
                <label for="filled-in-box">Allow Comments</label>
            </p>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Tell us your story</h5>
                <textarea name="body">{{ story.body }}</textarea>
            </div>
        </div>
        <input type="submit" value="Save" class="btn">
    </form>
</div>