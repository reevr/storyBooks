<h1>Welcome {{user.firstName}}</h1>
{{#if stories}}
    <h4>Your stories</h4>
    <table class="striped">
         <thead>
             <tr>
                 <th>Title</th>
                 <th>Date</th>
                 <th>Status</th>
                 <th></th>
             </tr>
         </thead>
         <tbody>
             {{#each stories}}
             <tr>
                 <td><a href="/stories/show/{{id}}">{{ title }}</a></td>
                 <td>{{ formatDate date 'MMMM do YYYY'}}</td>
                 <td><span class="dash-status">{{ status }}</span></td>
                 <td>
                    <a class="btn left-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i></a>
                    <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn red"><i class="fa fa-remove"></i> Delete</button>
                    </form>
                 </td>
             </tr>
             {{else}}
             {{/each}}
         </tbody>
    </table>
{{else}}
<h5>You have't posted any stories yet.</h5>
{{/if}}